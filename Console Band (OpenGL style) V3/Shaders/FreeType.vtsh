#version 420 core
layout (location = 0) in vec4 vertex; // <vec2 pos, vec2 tex>
out vec2 TexCoords;

uniform mat4 uView;
uniform mat4 uModel;
uniform mat4 uProj;

void main()
{
    vec4 viewspace = uView * uModel * vec4(vertex.xy, 0.0, 1.0);
    gl_Position = uProj * viewspace;
    TexCoords = vertex.zw;
}  